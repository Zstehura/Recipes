@page "/recipe/new"
@page "/recipe/{id:int}/edit"
@using RecipesApp.Models
@using RecipesApp.Services
@using System.ComponentModel.DataAnnotations
@using Microsoft.AspNetCore.Components.Forms
@inject RecipeService RecipeService
@inject NavigationManager Navigation

<PageTitle>@(recipe?.Id > 0 ? "Edit Recipe" : "New Recipe")</PageTitle>

<h1>@(recipe?.Id > 0 ? "Edit Recipe" : "New Recipe")</h1>

<EditForm Model="@recipe" OnValidSubmit="@HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-danger" />

    <div class="row">
        <div class="col-md-8">
            <div class="mb-3">
                <label class="form-label" for="name">Recipe Name *</label>
                <InputText id="name" class="form-control" @bind-Value="recipe.Name" />
                <ValidationMessage For="@(() => recipe.Name)" />
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Background Image (Optional)</label>
                <InputFile id="image" class="form-control" OnChange="HandleImageUpload" accept="image/*" />
                <small class="form-text text-muted">Maximum size: 10MB. Supported formats: JPEG, PNG, GIF</small>
                @if (!string.IsNullOrEmpty(imageError))
                {
                    <div class="text-danger small mt-1">@imageError</div>
                }
                @if (recipe.ImageContentType != null)
                {
                    <div class="mt-2">
                        <small class="text-success">Image uploaded successfully</small>
                        <button type="button" class="btn btn-sm btn-outline-danger ms-2" @onclick="RemoveImage">
                            Remove Image
                        </button>
                    </div>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Ingredients *</label>
                <div class="ingredients-list">
                    @for (int i = 0; i < ingredientEntries.Count; i++)
                    {
                        var index = i;
                        <div class="row mb-2 align-items-end g-2">
                            <div class="col-6 col-md-4">
                                <label class="form-label small">Quantity</label>
                                <InputNumber class="form-control form-control-sm" 
                                    @bind-Value="ingredientEntries[index].Quantity" 
                                    placeholder="0" />
                            </div>
                            <div class="col-6 col-md-4">
                                <label class="form-label small">Unit</label>
                                <InputSelect class="form-select form-select-sm" 
                                    @bind-Value="ingredientEntries[index].Unit">
                                    @foreach (var unit in Enum.GetValues<MeasurementUnit>())
                                    {
                                        <option value="@unit">@UnitConversionService.GetUnitDisplayName(unit)</option>
                                    }
                                </InputSelect>
                            </div>
                            <div class="col-10 col-md-3">
                                <label class="form-label small">Ingredient Name</label>
                                <InputText class="form-control form-control-sm" 
                                    @bind-Value="ingredientEntries[index].Name" 
                                    placeholder="e.g., flour" />
                            </div>
                            <div class="col-2 col-md-1">
                                <label class="form-label small d-block d-md-none">&nbsp;</label>
                                <button type="button" class="btn btn-sm btn-outline-danger w-100" 
                                    @onclick="() => RemoveIngredient(index)" title="Remove">
                                    <span class="bi bi-trash"></span>
                                </button>
                            </div>
                        </div>
                    }
                    @if (ingredientEntries.Count == 0)
                    {
                        <div class="text-danger small mb-2">At least one ingredient is required</div>
                    }
                </div>
                <button type="button" class="btn btn-sm btn-outline-primary mt-2" @onclick="AddIngredient">
                    <span class="bi bi-plus"></span> Add Ingredient
                </button>
            </div>

            <div class="mb-3">
                <label class="form-label" for="instructions">Instructions *</label>
                <InputTextArea id="instructions" class="form-control" rows="8" @bind-Value="recipe.Instructions" />
                <ValidationMessage For="@(() => recipe.Instructions)" />
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label" for="cookingTime">Cooking Time (minutes) *</label>
                    <InputNumber id="cookingTime" class="form-control" @bind-Value="recipe.CookingTime" />
                    <ValidationMessage For="@(() => recipe.CookingTime)" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label" for="servings">Servings *</label>
                    <InputNumber id="servings" class="form-control" @bind-Value="recipe.Servings" />
                    <ValidationMessage For="@(() => recipe.Servings)" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="tags">Tags</label>
                <InputText id="tags" class="form-control" @bind-Value="recipe.Tags" />
                <small class="form-text text-muted">Separate tags with commas (e.g., Italian, Vegetarian, Quick)</small>
            </div>

            <div class="mb-3">
                <label class="form-label" for="notes">Notes</label>
                <InputTextArea id="notes" class="form-control" rows="4" @bind-Value="recipe.Notes" />
                <small class="form-text text-muted">Any additional notes or tips about this recipe</small>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary me-2">Save Recipe</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public int Id { get; set; }

    private Recipe recipe = new();
    private List<IngredientEntry> ingredientEntries = new();
    private string imageError = string.Empty;
    private bool imageRemoved = false;

    protected override async Task OnInitializedAsync()
    {
        if (Id > 0)
        {
            var existingRecipe = await RecipeService.GetRecipeByIdAsync(Id);
            if (existingRecipe != null)
            {
                recipe = existingRecipe;
                imageRemoved = false; // Reset flag when loading existing recipe
                
                // Load image data separately if it exists
                if (existingRecipe.ImageContentType != null)
                {
                    var (imageData, contentType) = await RecipeService.GetRecipeImageAsync(Id);
                    recipe.ImageData = imageData;
                    recipe.ImageContentType = contentType;
                }
                
                // Convert recipe ingredients to entry format
                ingredientEntries = existingRecipe.RecipeIngredients.Select(ri =>
                {
                    // Convert from base unit back to a display unit
                    var (displayQuantity, displayUnit) = UnitConversionService.ConvertFromBaseUnit(
                        ri.Quantity ?? 0, 
                        ri.Unit ?? UnitConversionService.BASE_COUNT_UNIT);
                    
                    return new IngredientEntry
                    {
                        Name = ri.Ingredient.Name,
                        Quantity = displayQuantity,
                        Unit = displayUnit
                    };
                }).ToList();
            }
            else
            {
                Navigation.NavigateTo("/");
            }
        }
        else
        {
            // Add one empty ingredient entry for new recipes
            AddIngredient();
        }
    }

    private void AddIngredient()
    {
        ingredientEntries.Add(new IngredientEntry 
        { 
            Unit = MeasurementUnit.Pieces 
        });
    }

    private void RemoveIngredient(int index)
    {
        if (ingredientEntries.Count > index)
        {
            ingredientEntries.RemoveAt(index);
        }
    }

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        imageError = string.Empty;
        imageRemoved = false; // Reset removal flag when new image is uploaded
        
        var file = e.File;
        
        // Validate file size
        if (file.Size > RecipeService.MaxImageSizeBytes)
        {
            imageError = $"File size exceeds the maximum limit of {RecipeService.MaxImageSizeBytes / (1024 * 1024)}MB";
            return;
        }

        // Validate content type
        if (!file.ContentType.StartsWith("image/"))
        {
            imageError = "Please select an image file (JPEG, PNG, GIF, etc.)";
            return;
        }

        try
        {
            // Read file into byte array
            using var stream = file.OpenReadStream(maxAllowedSize: RecipeService.MaxImageSizeBytes);
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            
            recipe.ImageData = memoryStream.ToArray();
            recipe.ImageContentType = file.ContentType;
        }
        catch (Exception ex)
        {
            imageError = $"Error uploading image: {ex.Message}";
        }
    }

    private void RemoveImage()
    {
        recipe.ImageData = null;
        recipe.ImageContentType = null;
        imageError = string.Empty;
        imageRemoved = true;
    }

    private async Task HandleValidSubmit()
    {
        // Validate that at least one ingredient has a name
        var validIngredients = ingredientEntries
            .Where(e => !string.IsNullOrWhiteSpace(e.Name))
            .ToList();

        if (validIngredients.Count == 0)
        {
            return;
        }

        // If image was explicitly removed, ensure ImageData is null
        if (imageRemoved)
        {
            recipe.ImageData = null;
            recipe.ImageContentType = null;
        }

        if (recipe.Id > 0)
        {
            await RecipeService.UpdateRecipeAsync(recipe, validIngredients, imageRemoved);
        }
        else
        {
            await RecipeService.AddRecipeAsync(recipe, validIngredients);
        }
        Navigation.NavigateTo("/");
    }
}

